# A2A Telegram Bot - Environment Configuration
# Copy this to .env and fill in values

# === REQUIRED ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# Private key (WITH 0x prefix)
CLIENT_PRIVATE_KEY=0xyour_private_key_without_0x_prefix

# === OPTIONAL ===
# Worker Smart Account to monitor (default provided)
WORKER_ADDRESS=0x164e7A98fa7Bd34679522c470bF68D66C5b00C66

# Chain configuration
CHAIN_ID=10143
RPC_URL=https://testnet-rpc.monad.xyz

# Payment settings
HIRE_AMOUNT=0.0001

# Monitoring settings
POLL_INTERVAL=5000

# Security - Whitelist chat IDs (comma separated)
AUTHORIZED_CHAT_IDS=7146354764,1247450434

# Rate limiting (per user)
RATE_LIMIT_WINDOW=60000  # Window in ms (default: 60000 = 1 min)
RATE_LIMIT_MAX=5         # Max commands per window (default: 5)
